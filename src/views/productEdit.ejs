<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: "Productos"}) %>
<body>
    <!-- HEADER -->
    <%- include('partials/header') %> 

    <main class="detalle-de-productos">
        <h2>Editar Producto</h2>
        <h2><%= producto.modelo %></h2>
    </main>    

    <main class="detalle-de-productos">
        <section>
            <img src="/images/products/<%= producto.foto %>.jpg" alt="Bicicleta"/>
        </section>
        <section>
            <form action="?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="modelo">Modelo</label>
                    <input type="text" name="modelo" id="modelo" value="<%= producto.modelo %>">
                </div>
                <div class="form-group">
                    <label for="descripcion_destacada">Descripción Destacada</label>
                    <input type="text" name="descripcion_destacada" id="descripcion_destacada" value="<%= producto.descripcion_destacada %>">
                </div>
                <div class="form-group">
                    <label for="descripcion_larga">Descripción Larga</label>
                    <input type="text" name="descripcion_larga" id="descripcion_larga" value="<%= producto.descripcion_larga %>">
                </div>
                <div class="form-group">
                    <label for="talle">Talle</label>
                    <input type="text" name="talle" id="talle" value="<%= producto.talle %>">
                </div>                                                
                <div class="form-group">
                    <label for="colores">Colores</label>
                    <input type="text" name="colores" id="colores" value="<%= producto.colores %>">
                </div>                                                
                <button type="submit">Actualizar</button>
            </form>
        </section>        
    </main>   
    
    <!-- FOOTER -->        
    <%- include('partials/footer') %>
</body>
</html>