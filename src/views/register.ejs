<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {title: "Registro de Cliente"}) %>
<body>
    <%- include('partials/header') %>

    <main class="panelDeIngreso">
        <section>
            <h2>Registro de cliente</h2>
        </section>

        <section class="form">
            <form action="" method="POST" enctype="multipart/form-data">
                <!-- PROBAR ACA -->
                <div>
                    <label for="name">Nombre</label>
                    <input id="name" name="name" type="text" placeholder="nombre...">
                    <small>
                        <%= (locals.errors && errors.name) ? errors.name.msg : "" %>
                    </small>
                </div>                
                <div>
                    <label for="lastname">Apellido</label>
                    <input id="lastname" name="lastname" type="text" placeholder="apellido...">
                    <small>
                        <%= (locals.errors && errors.lastname) ? errors.lastname.msg : "" %>
                    </small>                    
                </div> 
                <div>
                    <label for="email">Correo Electrónico</label>
                    <input id="email" name="email" type="email" placeholder="ingrese aquí su correo electrónico...">
                    <small>
                        <%= (locals.errors && errors.email) ? errors.email.msg : "" %>
                    </small>                    
                </div>              
                <div>
                    <label for="password">Contraseña</label>
                    <input id="password" name="password" type="password" placeholder="Contraseña">
                    <small>
                        <%= (locals.errors && errors.password) ? errors.password.msg : "" %>
                    </small>                    
                </div>
                <div>
                    <label for="">Imagen de perfil</label>
                    <input id="avatar" type="file" name="avatar">
                </div>                
                <div class="cta-panel">
                    <div>
                        <a href="/users/login">¿Ya tenés usuario?</a>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">CREAR USUARIO</button>
                    </div>
                </div>
                <hr>
                <div class="alternative-login-panel">
                    <a href="#" class="facebook-login">
                        <i class="fab fa-facebook-f"></i>
                        <p>Ingresa con Facebook</p>
                    </a>
                    <a href="#" class="google-login">
                        <i class="fab fa-google"></i>
                        <p>Ingresa con Google</p>
                    </a>
                </div>
            </form>
        </section>
    </main>

    <%- include('partials/footer') %>
    
</body>
</html>